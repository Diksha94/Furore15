<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cse.dsi.furore.Facebook">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/header_image"
        android:scaleType="centerCrop"
        android:alpha="0.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_margin="50dp"
        android:id="@+id/lin"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/material_blue_grey_800"
            android:textStyle="bold"
            android:text="Sign in from facebook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/material_blue_grey_800"
            android:textStyle="bold"
            android:text=" and Participate in" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/material_blue_grey_800"
            android:textStyle="bold"
            android:text="Selfie contest" />

    </LinearLayout>

<!--<Button-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerInParent="true"-->
    <!--android:id="@+id/post"-->
    <!--android:background="@android:color/holo_blue_dark"-->
    <!--android:textColor="@color/icons"-->
    <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
    <!--android:textStyle="bold"-->
    <!--android:text="Confirm Post"-->
    <!--/>-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_orange_dark"
        android:padding="10dp"
        android:layout_below="@+id/lin"
        android:id="@+id/rules"
        android:textColor="@color/icons"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="Read More" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/authButton"
        android:visibility="visible"
        android:padding="10dp"
        android:orientation="vertical"
        android:id="@+id/terms">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="By logging in thorough facebook\nyou agree to the"
            android:visibility="visible" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:id="@+id/link_privacy"
            android:clickable="true"
            android:textColorLink="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="visible" />
    </LinearLayout>
    <com.facebook.widget.LoginButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:id="@+id/authButton" />


</RelativeLayout>
